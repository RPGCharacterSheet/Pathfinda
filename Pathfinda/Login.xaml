<Window x:Class="Pathfinda.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pathfinda"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="username  " />
                <TextBox x:Name="username" Width="200" KeyDown="text_KeyDown" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="password  " />
                <PasswordBox x:Name="password" Width="200" KeyDown="text_KeyDown" Margin="2,0,0,0" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="New User" Margin="10" Click="Button_Click_1" Width="100" />
                <Button Content="Existing User" Margin="10" Click="Button_Click" Width="100" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
